<?xml version="1.0"?>
<odoo>
    <record id="view_form_others_forecast" model="ir.ui.view">
        <field name="name">Others</field>
        <field name="model">others.forecast</field>
        <field name="arch" type="xml">
            <form string="Others">
                <header>
                    
                </header>
                <sheet>
                    <group name="group_top">
                        <group name="group_left">
                            <field name="nama"/>
							<field name="kategori"/>
							<field name="tanggal_peminjaman"/>
                        </group>
                        <group name="group_right">
                             <field name="tenggat_waktu"/>
							 <field name="total_biaya"/>
                        </group>
                    </group>
					
					<notebook>
                        <page name="keterangan_page" string="Keterangan">
                            <field name="keterangan" placeholder="Keterangan..." style="height: 100px;"/>
                        </page>
					</notebook>
					
                </sheet>
            </form>
        </field>
    </record>
	
	<record id="view_tree_others_forecast" model="ir.ui.view">
		<field name="name">Others Forecast Tree</field>
		<field name="model">others.forecast</field>
		<field name="arch" type="xml">
			<tree>
				<field name="nama"/>
				<field name="kategori"/>
				<field name="tanggal_peminjaman"/>
				<field name="tenggat_waktu"/>
				<field name="total_biaya"/>
			</tree>
		</field>
	</record>
	
	<record id="view_filter_others_forecast" model="ir.ui.view">
		<field name="name">Others Forecast Filter</field>
		<field name="model">others.forecast</field>
		<field name="arch" type="xml">
			<search>
				<field name="nama"/>
			</search>
		</field>
	</record>
</odoo>