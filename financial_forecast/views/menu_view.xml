<?xml version="1.0" encoding ="UTF-8"?>
<odoo>
    <record model="ir.actions.act_window" id="receivable_forecast">
        <field name="name">Receivable</field>
        <field name="res_model">receivable.forecast</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Example
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="payable_forecast">
        <field name="name">Payable</field>
        <field name="res_model">payable.forecast</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Example
            </p>
        </field>
    </record>

	<menuitem 
        id="main_menu" 
        name="Forecast"
    />
	
    <menuitem 
        id="menu_cashin" 
        name="Cash In" 
        parent="main_menu"
    />

    <menuitem 
        id="receivable_menu" 
        name="Receivable" 
        parent="menu_cashin"
        action="receivable_forecast"
    />

    <menuitem
        id="menu_cashout"
        name="Cash Out"
        parent="main_menu"
    />

    <menuitem
        id="payable_menu"
        name="Payable"
        parent="menu_cashout"
        action="payable_forecast"
    />
   
</odoo>