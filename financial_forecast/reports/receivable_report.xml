<?xml version="1.0" ?>

<odoo>
	<report
		id="action_receivable"
		model="receivable.forecast"
		string="Receivable"
		report_type="qweb-pdf"
		name="financial_forecast.receivable_template"
		file="financial_forecast/views/receivable_view.receivable_template"/>
		
	<template id="receivable_template">
		<t t-call="report.html_container">
			<t t-foreach="docs" t-as="d">
				<t t-call="report.external_layout">
					<div class="page">
					
					
					<h2>Receivable</h2>
					 <table class="table table-bordered" style="table-layout:auto; border: 1px solid black">
		                <thead>
		                    <tr style="background-color: #EAEAEA">
		                        <th class="text-center">Name</th>
								<th class="text-center">Category</th>
		                        <th class="text-center">Transaction Date</th>
								<th class="text-center">Deadline</th>
								<th class="text-center">Total Amount</th>
							</tr>
							<tr>
								<td> <span t-field="d.Name"/> </td>
								<td> <span t-field="d.Category"/> </td>
								<td> <span t-field="d.tanggal_transaksi"/> </td>
								<td> <span t-field="d.tenggat_waktu"/> </td>
								<td> <span t-field="d.total_biaya"/> </td>

		                    </tr>
		               </thead>
		              
					</table>
					<!-- Total-->
			<div class="row">
				<div class="col-xs-3">
					Count : <t t-esc="len(docs)"/>
				</div>
				<div class="col-xs-2"/>
				<div class="col-xs-1">
					Total :
					<t t-esc="sum([o.total_biaya for o in docs])" />
				</div>
				<div class="col-xs-3" />
				<div class="col-xs-3" />
			</div>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>