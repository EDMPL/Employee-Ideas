<?xml version="1.0" ?>

<odoo>
	<report
		id="action_receivable"
		model="receivable.forecast"
		string="Piutang"
		report_type="qweb-pdf"
		name="financial_forecast.receivable_template"
		file="financial_forecast/views/receivable_view.receivable_template"/>
		
	<template id="receivable_template">
		<t t-call="report.html_container">
			<t t-foreach="docs" t-as="d">
				<t t-call="report.external_layout">
					<div class="page">
					
					
					<h2>Piutang</h2>
					 <table class="table table-bordered" style="table-layout:auto; border: 1px solid black">
		                <thead>
		                    <tr style="background-color: #EAEAEA">
		                        <th class="text-center">Nama</th>
								<th class="text-center">Kategori</th>
		                        <th class="text-center">Tanggal Transaksi</th>
								<th class="text-center">Tenggat Waktu</th>
								<th class="text-center">Total Biaya</th>
							</tr>
							<tr>
								<td> <span t-field="d.nama"/> </td>
								<td> <span t-field="d.kategori"/> </td>
								<td> <span t-field="d.tanggal_transaksi"/> </td>
								<td> <span t-field="d.tenggat_waktu"/> </td>
								<td> <span t-field="d.total_biaya"/> </td>

		                    </tr>
		               </thead>
		              
					</table>
					
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>