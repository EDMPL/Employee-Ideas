<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_form_employee_ideas" model="ir.ui.view">
	<field name="name">Employee Ideas</field>
	<field name="model">employee.ideas</field>
	<field name="arch" type="xml">
	
	<form>
		<header>
			<button string="Post Ideas for Voting" type="object" name="new_progressbar" attrs="{'invisible': [('vote','=','new')]}"/> 
			<button string="post Ideas for Voting" type="object" name="post_progressbar" class="oe_highlight" attrs="{'invisible': [('vote','!=','new')]}"/>
			<field name="vote" widget="statusbar"/>
		</header>
		
		<sheet>
			<!--content-->
			<group name="group_top">
				<group name="group_left">
				<h1>
				<field String="Title" name="title" placeholder="Title"/>
				</h1>
				</group>
			</group>
			
			<group name="group_mid">
				<group name="group_left">
						<field name="Employee" />
						<field name="Create_date"/>
						<field name="Company"/>
				</group>
				<group name="group_right">
					<field name="Department"/>
					<field name="Deadline"/>
					<field name="Ideas_type"/>
				</group>
			</group>
			
			<notebook colspan="4">
			
					<page string="Detail" name="Detail">
						Every weekend arrange meeting for share your work experience
					</page>
					
						<page string="Employee Votes" name="Employee_votes"></page>
				</notebook>
			</sheet>
		</form>
	</field>
</record>

<!--listview-->

<record id="view_tree_form_employee_ideas" model="ir.ui.view">
	<field name="name">Employee Ideas</field>
	<field name="model">employee.ideas</field>
	<field name="arch" type="xml">
		<tree>
				<field name="title"/>
				<field name="Employee"/>
				<field name="Department"/>
				<field name="Company"/>
				<field name="Ideas_type"/>
		</tree>
	</field>
</record>

<!--searchview-->
<record id="view_filter_todo_task" model="ir.ui.view">
	<field name="name">Employee Ideas</field>
	<field name="model">employee.ideas</field>
	<field name="arch" type="xml">
		<search>
				<field name="title"/>
				<field name="Employee"/>
				<field name="Department"/>
				<field name="Company"/>
				<field name="Ideas_type"/>
		</search>
	</field>
</record>
</odoo>